@page
@model PPAP_Proiect.Pages.User.LoginModel
@{
    ViewData["Title"] = "Login";
    string mesajSucces = HttpContext.Session.GetString("mesajSucces");
    string eroareLogin = HttpContext.Session.GetString("eroareLogin");

    if(mesajSucces != null)
        HttpContext.Session.Remove("mesajSucces");

    if (eroareLogin != null)
        HttpContext.Session.Remove("eroareLogin");
}

<div class="auth-wrapper">
    <div class="auth-card">
        <h2>Autentificare</h2>

        <form method="post">
            @if (Model.ModelState["eroareLogin"]?.Errors.Count > 0 || eroareLogin != null)
            {
                <div class="form-group">
                    <span class="text-danger">@(Model.ModelState["eroareLogin"]?.Errors.FirstOrDefault()?.ErrorMessage ?? eroareLogin)</span>
                </div>
            }

            @if (Model.ModelState["mesajSucces"] != null || mesajSucces != null)
            {
                <div class="form-group">
                    <span class="text-success" style="color: green; font-weight: bold;">
                        @(Model.ModelState["mesajSucces"]?.Errors.FirstOrDefault()?.ErrorMessage ?? mesajSucces)
                    </span>
                </div>
            }
            <div class="form-group">
                <label>Email sau CNP:</label>
                <input asp-for="EmailsauCNP" type="text" placeholder="nume@exemplu.ro / 1231231231231" />
                <span class="text-danger">@Model.ModelState["eroareEmailCNP"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
            </div>

            <div class="form-group">
                <label>Parolă:</label>
                <input asp-for="parola" type="password" placeholder="••••••••" />
                <span class="text-danger">@Model.ModelState["eroareParola"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
            </div>

            <button type="submit" class="btn-primary">Intră în cont</button>


            <div class="auth-footer">
                <span>Nu ai cont?</span>
                <a asp-page="/User/Register" class="auth-link">Înregistrează-te</a>
            </div>

            <div class="auth-footer" style="margin-top: 0.5rem;">
                <span>Ai uitat parola?</span>
                <a asp-page="/User/ResetParola" class="auth-link">Resetează aici</a>
            </div>
        </form>
    </div>
</div>