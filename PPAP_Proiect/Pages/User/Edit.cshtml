@page
@model PPAP_Proiect.Pages.User.EditModel
@{
    ViewData["Title"] = "Editare Profil";
}

<style>

    .form-row {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between; 
    }

    .form-col {
        width: 48%; 
        margin-bottom: 15px;
    }

    }
</style>

<div class="auth-wrapper">
    <div class="auth-card">
        <h2>Editare profil utilizator</h2>

        <form method="post">

            <div class="form-row">

                <div class="form-group form-col">
                    <label>Nume:</label>
                    <input asp-for="userEdit.Nume" placeholder="Introdu numele" />
                    <span class="text-danger">@Model.ModelState["eroareNume"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
                </div>

                <div class="form-group form-col">
                    <label>Prenume:</label>
                    <input asp-for="userEdit.Prenume" placeholder="Introdu prenumele" />
                    <span class="text-danger">@Model.ModelState["eroarePrenume"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
                </div>

                <div class="form-group form-col">
                    <label>Email:</label>
                    <input asp-for="userEdit.Email" type="email" placeholder="email@exemplu.ro" />
                    <span class="text-danger">@Model.ModelState["eroareEmail"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
                </div>

                <div class="form-group form-col">
                    <label>CNP:</label>
                    <input asp-for="userEdit.Cnp" placeholder="Cod Numeric Personal" />
                    <span class="text-danger">@Model.ModelState["eroareCNP"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
                </div>

                <div class="form-group form-col">
                    <label>Parolă:</label>
                    <input asp-for="userEdit.Parola" type="password" placeholder="••••••••" />
                    <span class="text-danger">@Model.ModelState["eroareParola"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
                </div>

                <div class="form-group form-col">
                    <label>Confirmare parolă:</label>
                    <input asp-for="parolaConfirmare" type="password" placeholder="••••••••" />
                    <span class="text-danger">@Model.ModelState["eroareParolaConfirmare"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
                </div>

            </div> <button type="submit" class="btn-primary" style="margin-top: 10px;">Salvează modificările</button>

            <div class="auth-footer">
                <a asp-page="/User/Index" class="auth-link">Înapoi la profil</a>
            </div>

        </form>
    </div>
</div>